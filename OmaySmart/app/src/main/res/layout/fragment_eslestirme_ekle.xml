<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EslestirmeEkleFragment">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageViewCEFSettings"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/settings_gif"
        android:visibility="invisible" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageViewCEFCompleted"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/completed_gif"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonCihazEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gifImageViewCEFCompleted"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/button_cihazkaydet"
        android:textAllCaps="false"
        android:visibility="invisible" />

</RelativeLayout>